{
    "manifest_version": 2,

	"version": "0.0.2",
    "name": "1click link creator",
    "description": "Get Title And URL with one click",
    "author": "fuyuton",

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["js/script.js"],
		"run_at": "document_idle"
	}],
	
	"background": {
		"scripts": ["js/jquery-3.3.1.min.js", "js/background.js"],
		"persistent": false
	},

    "browser_action": {
        "default_title": "1 click copy"
    },
    
    "options_page": "options.html",

    "permissions": [
    	"tabs",
    	"activeTab",
    	"background"
	]
}